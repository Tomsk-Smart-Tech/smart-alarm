<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/widget_root"
    android:gravity="center"
    android:backgroundTint="@color/white"
    android:background="?android:attr/selectableItemBackground">
    <!--    android:background="@drawable/widget_background"-->
     <!-- Можно сделать фон в Material-стиле -->
    <TextView
        android:id="@+id/text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textColor="@android:color/primary_text_light"
        android:layout_marginStart="8dp"/>

    <!-- Температура -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/icon_temp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_temperature"/>

        <TextView
            android:id="@+id/text_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0°C"
            android:textSize="16sp"
            android:textColor="@android:color/primary_text_light"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Влажность -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/icon_humidity"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_humidity"/>

        <TextView
            android:id="@+id/text_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="16sp"
            android:textColor="@android:color/primary_text_light"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- VOC -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/icon_voc"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_air"/>

        <TextView
            android:id="@+id/text_voc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:textColor="@android:color/primary_text_light"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/text_sensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_sensors"
        android:textSize="16sp"
        android:textColor="@android:color/primary_text_light"
        android:layout_marginStart="8dp"/>
</LinearLayout>